<% content_for(:html_title) { 'My Profile' } %>
<div class="container">
  <div class="row flex-column align-items-center">
    <div class="m-3 p-4 text-center border shadow col-md-6">
        <h2 class="text-center mb-5 bg-dark text-white rounded"><%= @user.name %></h2>
        <hr>
        <%= (@user.avatar.attached?) ? image_tag(@user.avatr, size: "500*500", class: 'card-img-top mt-2 border rounded-circle') : image_tag("avatar.svg", size: "500*500", class: 'card-img-top mt-2 border rounded-circle') %>
        <hr>
        <h4><b>Number of Orders: </b><%= @user.get_orders(@user) %></h4>
        <h4><b>User E-mail: </b><%= @user.email %></h4>
    </div>
  </div>
</div>