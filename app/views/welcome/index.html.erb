<% content_for :title, "Eshtry" %>

<div class="p-4 text-center text-white">
  <% if user_signed_in? %>
    <% if current_user.superadmin_role? %>
        <h1 class="text-center rounded mb-3">Welcome, Admin!</h1>
      <% else %>
        <h1 class="text-center rounded mb-3">Welcome, <%= current_user.name %></h1>
    <% end %>
    <br>
    <p class="lead"> Enjoy The App!</p>
    <br>
    <div class="row-fluid text-center mb-3">
      <%= link_to "Sign Out", destroy_user_session_path, :method => :delete, :class => 'btn btn-large btn-outline-dark text-white' %>
    </div>
    <% else %>
    <h2 class="text-center rounded">Welcome, dude!</h2>
    <br>
    <p class="lead">
      You should sign in or sign up to enjoy our service
    </p>
    <br>
    <div class="row-fluid text-center mb-3">
        <%= link_to "Sign In", main_app.new_user_session_path, :class => "btn btn-large btn-outline-primary btn-sm text-white shadow mr-2" %>
        <%= link_to "Sign Up", new_user_registration_path, :class => "btn btn-large btn-dark btn-sm text-white shadow" %>
    </div>
  <% end %>
</div> 
</div>
